{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/investigation.json",
  "title": "Investigation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "claim_id": {"type": "string", "minLength": 1},
    "suspicions": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "source": {"type": "string", "minLength": 1},
          "snippet": {"type": "string", "minLength": 5}
        },
        "required": ["source", "snippet"]
      }
    },
    "peer_stats": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["claim_id", "suspicions", "evidence", "peer_stats"]
}
