{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/explanation.json",
  "title": "Explanation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "claim_id": {"type": "string", "minLength": 1},
    "summary": {"type": "string", "minLength": 40},
    "recommendation": {
      "type": "string",
      "enum": ["approve", "manual_review", "deny"]
    },
    "citations": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "report_url": {"type": "string", "format": "uri"}
  },
  "required": ["claim_id", "summary", "recommendation", "citations"],
  "allOf": [
    {
      "if": {
        "properties": {"recommendation": {"const": "approve"}}
      },
      "then": {"properties": {"citations": {"minItems": 0}}}
    }
  ]
}
