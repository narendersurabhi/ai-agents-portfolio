{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/claim.json",
  "title": "Claim",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {"type": "string", "minLength": 1},
    "member": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "dob": {"type": "string", "format": "date"},
        "plan_id": {"type": "string", "minLength": 1}
      },
      "required": ["id", "dob", "plan_id"]
    },
    "provider": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "npi": {"type": "string", "pattern": "^\\d{10}$"},
        "name": {"type": "string", "minLength": 1}
      },
      "required": ["npi", "name"]
    },
    "dos": {"type": "string", "format": "date"},
    "place": {"type": "string", "minLength": 2},
    "amount": {"type": "number", "minimum": 0},
    "lines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "cpt": {"type": "string", "minLength": 3},
          "units": {"type": "number", "minimum": 1},
          "charge": {"type": "number", "minimum": 0},
          "dx": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string", "minLength": 3}
          }
        },
        "required": ["cpt", "units", "charge", "dx"]
      }
    }
  },
  "required": ["id", "member", "provider", "dos", "place", "amount", "lines"]
}
